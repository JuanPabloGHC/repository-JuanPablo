    <figure class="flex flex-col lg:col-span-2 lg:row-span-2 justify-center items-center">
        <Image
            class="w-80 h-full xl:w-96 object-conver rounded-full border-secondary shadow-md shadow-teal-500 md:rounded-lg"
            src={JP_ProfilePicture}
            alt={"Juan Pablo's Profile picture"}
        />
        <figcaption class="hidden" tabindex="0">
            Juan Pablo's Profile picture
        </figcaption>
    </figure>

    <div class="w-full flex flex-col justify-start items-center text-center gap-5 lg:gap-0 lg:col-span-3">
