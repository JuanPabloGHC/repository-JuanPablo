---
import { experiences } from "data/experiences";
import ExperienceCard from "./experienceCard.astro";
---

<section id="experience" class="w-full flex flex-col px-5 md:px-10 lg:px-20">

    <div class="flex gap-5 items-center">
        <span class="w-2 h-2 rounded-full bg-secondary md:w-4 md:h-4"></span>

        <h3 class="text-lg md:text-2xl font-bold">
            Experience
        </h3>
    </div>

    <ul class="grid grid-cols-1 xl:grid-cols-2 3xl:grid-cols-3 gap-5 mt-5 justify-center items-center">
        {
            experiences.map((experience) => (
                <ExperienceCard experience={experience} />
            ))
        }
    </ul>

</section>